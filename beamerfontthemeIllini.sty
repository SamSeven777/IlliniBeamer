% beamerfontthemeIllini.sty

% About the usage of fonts, see https://brand.illinois.edu/visual-identity/typography

\RequirePackage{fontspec}
\renewcommand{\familydefault}{\rmdefault}
\setsansfont{Source Sans Pro}
\setmainfont{Georgia}

% Define the Montserrat font
\setbeamerfont{structure}{family=\fontspec{Source Sans Pro}}

\setbeamerfont{frametitle}{series=\bfseries,family=\fontspec{Montserrat}}
\setbeamerfont{section in toc}{series=\bfseries,family=\fontspec{Montserrat}}
\setbeamerfont{title}{series=\bfseries,family=\fontspec{Montserrat},size=\LARGE}
\setbeamerfont{subtitle}{family=\fontspec{Montserrat}}
\setbeamerfont{institute}{series=\mdseries,family=\fontspec{Montserrat}}
\setbeamerfont{date}{family=\fontspec{Montserrat}}
\setbeamerfont{author}{series=\mdseries,family=\fontspec{Montserrat},size=\normalsize}

% Define the Source Sans Pro font
\setbeamerfont{itemize/eumerate item}{family=\fontspec{Source Sans Pro}}

\setbeamerfont{itemize/eumerate body}{family=\fontspec{Source Sans Pro}}
\setbeamerfont{itemize/eumerate subbody}{family=\fontspec{Source Sans Pro}}
\setbeamerfont{itemize/eumerate subsubbody}{family=\fontspec{Source Sans Pro}}
\setbeamerfont{block title}{family=\fontspec{Source Sans Pro}}
\setbeamerfont{block body}{family=\fontspec{Source Sans Pro}}

% Define the Georgia font
\setbeamerfont{quote}{family=\fontspec{Georgia}}
\setbeamerfont{quotation}{family=\fontspec{Georgia}}
\setbeamerfont{quote author}{family=\fontspec{Georgia}}
\setbeamerfont{quotation author}{family=\fontspec{Georgia}}

