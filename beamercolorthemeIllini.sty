% beamercolorthemeIllini.sty
% About the usage of color, see https://brand.illinois.edu/visual-identity/color.

% Define UIUC colors
\definecolor{illini-orange}{RGB}{255,95,5}
\definecolor{illini-blue}{RGB}{19,41,75}
\definecolor{heritage-orange}{RGB}{245,130,30}
\definecolor{arches-blue}{RGB}{0,159,212}
\definecolor{cloud}{RGB}{248,250,252}
\definecolor{white}{RGB}{255,255,255}
\definecolor{black}{RGB}{0,0,0}

% Set the color theme
\setbeamercolor{palette primary}{bg=illini-orange,fg=white}
\setbeamercolor{palette secondary}{bg=illini-blue,fg=white}
\setbeamercolor{palette tertiary}{bg=illini-orange,fg=white}
\setbeamercolor{palette quaternary}{bg=illini-blue,fg=white}
\setbeamercolor{section in toc}{fg=illini-blue}

\setbeamercolor{title}{fg=illini-blue}

\setbeamercolor{footline}{bg=illini-orange, fg=white}

\setbeamercolor{headline}{bg=illini-blue}

\setbeamercolor{frametitle}{fg=black}

\setbeamercolor{item}{fg=illini-blue}
\setbeamercolor{enumerate item}{fg=illini-blue}

\setbeamercolor{block title}{bg=arches-blue,fg=white}
\setbeamercolor{block body}{bg=cloud!92!black,fg=black}
